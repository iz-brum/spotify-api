extends layout.pug  

block content
  style. 
    body {
      font-family: 'Roboto', sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background-color: #297dddd5;
    }

    .container {
      max-width: 46vw;
      max-height: 86vh;
      padding: 40px 40px;
      background-color: rgba(255, 255, 255, 0.9);
      background-image: url("https://i.ibb.co/QrDvVXd/bgbolhas.jpg");
      background-size: cover; /* Ajusta o tamanho da imagem para cobrir todo o contÃªiner */
      background-position: right; /* Centraliza a imagem horizontal e verticalmente */
      border-radius: 10px;
      text-align: center; /* Centraliza o texto no contÃªiner */
      color: #000; /* Adicione uma cor de texto para garantir a legibilidade na imagem de fundo */
      box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
      transform: scale(1.65);
    }


    .login-title {
      font-size: 3.5em;
      margin-bottom: 20px;
      font-weight: bold;
      text-shadow: 2px 3px 2px rgba(0, 0, 0, 0.7);
    }

    .login-subtitle {
      font-size: 1.5em;
      margin-bottom: 30px;
      color: #ffff;
      text-shadow: 2px 3px 2px rgba(0, 0, 0, 0.71);
    }

    .login-button {
      display: inline-block;
      background-color: #ffffff;
      color: #1DB954;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      font-size: 1.2em;
      transition: background-color 0.3s, color 0.3s;
      margin: 0 auto; /* Centraliza o botÃ£o */
    }

    .login-button:hover {
      background-color: #333;
      color: #ffffff;
    }

